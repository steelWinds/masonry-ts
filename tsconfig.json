{
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"src/*": ["./src/*"],
			"@/*": ["./*"],
		},
		"rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
		"declarationDir": "dist",
		"declarationMap": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
		"emitDeclarationOnly": true,
		"allowJs": true,
		"declaration": true,
		"stripInternal": true,
		"outDir": "dist",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "tests/types/global.d.ts"],
	"tsc-alias": {
    "verbose": true,
  }
}
